{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": [
      "webpack",
      "webpack-env"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "app/assets/javascripts/*"
      ],
      "~/*": [
        "app/*"
      ]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "app/assets/javascripts/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}